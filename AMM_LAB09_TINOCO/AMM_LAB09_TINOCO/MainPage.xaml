             x:Class="AMM_LAB09_TINOCO.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Orientation="Vertical">
            <Button x:Name="Item1" Text="TapDemo"></Button>
            <Button x:Name="Item2" Text="PinchDemo"></Button>
            <Button x:Name="Item3" Text="PanDemo"></Button>
            <Button x:Name="Item4" Text="SwipeDemo"></Button>
        </StackLayout>
    </StackLayout>

</ContentPage>
